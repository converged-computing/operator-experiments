manager_machine_type = "e2-standard-2"
manager_name_prefix  = "k3s"
manager_scopes       = [ "cloud-platform" ]

# I created these special with cgroups 2 enabled
manager_family        =	"flux-cgroups-manager"
compute_family        = "flux-cgroups-compute"
login_family          = "flux-cgroups-login"

login_node_specs = [
    {
        name_prefix  = "k3s-login"
        machine_arch = "x86-64"
        machine_type = "n2-standard-2"
        instances    = 1
        properties   = []
        boot_script  = "fuse-mounts.sh"
    },
]
login_scopes = [ "cloud-platform" ]

compute_node_specs = [
    {
        name_prefix  = "k3s-compute-a"
        machine_arch = "x86-64"
        machine_type = "n2-standard-2"
        gpu_type     = null
        gpu_count    = 0
        compact      = false
        instances    = 2
        properties   = []
        boot_script  = "fuse-mounts.sh"
    },
]
compute_scopes = [ "cloud-platform" ]
